import java.util.Scanner;
public class task3 {
	public static void main(String[] args) {
		
		Scanner input = new Scanner(System.in,"UTF-8");

	    System.out.println("Please enter n:");
	     int n = input.nextInt();
		




System.out.println("Enter few integers");
//int smallest = 1;
//int largest = 2;

int smallest = 1;
int largest = 2;


for (int i = 1; i <=n ; i++) {
//while (input.hasNext()) {
    System.out.println("Please enter k:");
    int k = input.nextInt();
if (k ==0) { break; }
if ( k < smallest )
{ smallest = k;}
if ( k > largest )
{ largest = k;}
}
System.out.println("smallest = " + smallest);
System.out.println("largest = " + largest);
}
}
